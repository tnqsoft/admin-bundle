{% if record.isActive == 1 %}
    <a href="{{ path(actionName, {'id': record.id, 'status': 'false' }) }}" class="btn btn-success" data-toggle="tooltip" data-placement="right" title="Hoạt động">
        <i class="fa fa-unlock"></i>
    </a>
{% else %}
    <a href="{{ path(actionName, {'id': record.id, 'status': 'true' }) }}" class="btn btn-warning" data-toggle="tooltip" data-placement="right" title="Đang khóa">
        <i class="fa fa-lock"></i>
    </a>
{% endif %}